{% extends 'base.html.twig' %}

{% block body %}

<a href="/vendor/mystore"><button type="button" class="btn btn-info"><span class="glyphicon glyphicon-arrow-left"></span>Back</button></a>

<center><h2>Edit Product Form</h2></center>
<div class="center-div panel panel-default" id="create-listing">
    {{ form_start(form) }}

    {{ form_label(form.productName) }}
    {{ form_errors(form.productName) }}
    {{ form_widget(form.productName, {attr: {value: productName}}) }}
    <br />
    {{ form_label(form.productQuantity) }}
    {{ form_errors(form.productQuantity) }}
    {{ form_widget(form.productQuantity, {attr: {value: productQuantity}}) }}
    <br />
    {{ form_label(form.productPrice) }}
    {{ form_errors(form.productPrice) }}
    {{ form_widget(form.productPrice, {attr: {value: productPrice}}) }}
    <br />
    {{ form_label(form.productDescription) }}
    {{ form_errors(form.productDescription) }}
    {{ form_widget(form.productDescription, {'value': productDescription}) }}
    <br />
    {{ form_row(form.productImage) }}
    <button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-edit"></span> Save Changes</button>
    <button type="reset" class="btn btn-warning"><span class="glyphicon glyphicon-remove"></span> Clear Form</button>
    {{ form_end(form) }}
</div>

{% endblock %}
